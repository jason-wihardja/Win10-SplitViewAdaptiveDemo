<Application
    x:Class="SplitViewAdaptiveDemo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SplitViewAdaptiveDemo"
    xmlns:converter="using:SplitViewAdaptiveDemo.Converters"
    RequestedTheme="Light">

    <Application.Resources>
        <x:String x:Key="AppName">Split View Adaptive Demo</x:String>
        
        <x:Double x:Key="SplitViewIconSize">50</x:Double>
        <x:Double x:Key="SplitViewExpandedSize">200</x:Double>

        <converter:VisibilityConverter x:Key="VisibilityConverter"/>
        <converter:GridLengthConverter x:Key="GridLengthConverter"/>

        <SolidColorBrush x:Key="SplitViewBackgroundBrush" Color="#2B2B2B"/>

        <SolidColorBrush x:Key="HamburgerBG" Color="#0063B1"/>
        <SolidColorBrush x:Key="HamburgerBGHover" Color="#1972B9"/>
        <SolidColorBrush x:Key="HamburgerBGPressed" Color="#3382C1"/>
        
        <SolidColorBrush x:Key="NavigationBG" Color="Transparent"/>
        <SolidColorBrush x:Key="NavigationBGHover" Color="#404040"/>
        <SolidColorBrush x:Key="NavigationBGPressed" Color="#555555"/>

        <SolidColorBrush x:Key="NavigationSelectedBG" Color="#15476E"/>
        <SolidColorBrush x:Key="NavigationSelectedBGHover" Color="#2C597C"/>
        <SolidColorBrush x:Key="NavigationSelectedBGPressed" Color="#446C8B"/>
    </Application.Resources>
</Application>
